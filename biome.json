{
    "$schema": "https://biomejs.dev/schemas/2.2.4/schema.json",
    "vcs": {
        "enabled": true,
        "clientKind": "git",
        "useIgnoreFile": true
    },
    "files": {
        "ignoreUnknown": false,
        "includes": [
            "**/src/**/*",
            "**/.vscode/**/*",
            "**/index.html",
            "**/vite.config.js",
            "!**/src/routeTree.gen.ts",
            "!**/src/styles.css"
        ]
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentWidth": 4
    },
    "assist": {
        "actions": {
            "source": {
                "organizeImports": {
                    "level": "on",
                    "options": {
                        "groups": [
                            ["react", "react-dom"],
                            ":BLANK_LINE:",
                            [":NODE:"],
                            ":BLANK_LINE:",
                            ["@tanstack/**"],
                            ":BLANK_LINE:",
                            [":PACKAGE:"],
                            ":BLANK_LINE:",
                            ["@/types/**"],
                            ":BLANK_LINE:",
                            ["@/lib/**", "@/services/**"],
                            ":BLANK_LINE:",
                            ["@/components/**"],
                            ":BLANK_LINE:",
                            ["@/features/**"]
                        ]
                    }
                }
            }
        }
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "correctness": {
                "noUnusedImports": "error"
            }
        }
    },
    "javascript": {
        "formatter": {
            "quoteStyle": "single",
            "semicolons": "always"
        }
    },
    "json": {
        "formatter": {
            "indentWidth": 4
        }
    }
}
